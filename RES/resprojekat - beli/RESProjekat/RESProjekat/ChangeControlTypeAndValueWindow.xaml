<Window x:Class="LocalController.ChangeControlTypeAndValueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalController"
        mc:Ignorable="d"
        Title="Change Control Type and Value" Height="160" Width="210" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
	<Grid Background="White">
		<Label Content="Local" Foreground="BlueViolet" FontSize="14" Margin="4,22,134,0"/>
		<Label Content="Remote" Foreground="BlueViolet" FontSize="14" Margin="134,22,0,0" HorizontalAlignment="Left" Width="70"/>
		<Slider Name="slider" HorizontalAlignment="Left" Margin="51,30,0,0" Value="1" Maximum="1" IsSnapToTickEnabled="True" TickFrequency="1" VerticalAlignment="Top" Width="78" ValueChanged="Slider_ValueChanged"/>
		<TextBox Name="txt_box_trenutnaSnaga" HorizontalAlignment="Left" Height="23" Margin="10,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105"/>
		<Button Content="Change" BorderBrush="#232323" BorderThickness="1 1 1 1" Background="WhiteSmoke" Foreground="BlueViolet" FontSize="14" Margin="120,70,10,0" VerticalAlignment="Top" Click="Button_Click"/>
	</Grid>
</Window>
