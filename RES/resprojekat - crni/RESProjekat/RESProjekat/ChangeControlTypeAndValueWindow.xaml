<Window x:Class="LocalController.ChangeControlTypeAndValueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalController"
        mc:Ignorable="d"
        Title="Change Control Type and Value" Height="160" Width="210" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
	<Grid Background="#383A41">
		<Label Content="Local" Foreground="ForestGreen" FontSize="14" Margin="10,22,134,0"/>
		<Label Content="Remote" Foreground="ForestGreen" FontSize="14" Margin="141,22,0,0"/>
		<Slider Name="slider" HorizontalAlignment="Left" Margin="62,30,0,0" Value="1" Maximum="1" IsSnapToTickEnabled="True" TickFrequency="1" VerticalAlignment="Top" Width="74" ValueChanged="Slider_ValueChanged"/>
		<TextBox Name="txt_box_trenutnaSnaga" HorizontalAlignment="Left" Height="23" Margin="62,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="74"/>
		<Button Content="Change" BorderBrush="#232323" BorderThickness="1 1 1 1" Background="#2E2E2E" Foreground="ForestGreen" FontSize="14" HorizontalAlignment="Left" Margin="62,98,0,0" VerticalAlignment="Top" Width="74" Click="Button_Click"/>
	</Grid>
</Window>
