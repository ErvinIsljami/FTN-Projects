<UserControl x:Class="NetworkService.Views.ReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkService.Views"
             xmlns:viewModel ="clr-namespace:NetworkService.ViewModel"
             xmlns:vml ="clr-namespace:NetworkService.VML"
             vml:ViewModelLocator.AutoHookedUpViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="635">
    <Grid>
        <Button Command="{Binding ShowCommand}" HorizontalAlignment="Left" VerticalAlignment="Top" Height="50" Width="250" Content="Show daily report" FontSize="30" Margin="10,10,0,0"></Button>
        <TextBox Height="400" FontWeight="Bold" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" VerticalAlignment="Top" Text="{Binding ReportText}" Width="615" Margin="10,90,0,0" TextWrapping="Wrap" IsReadOnly="True"></TextBox>
    </Grid>
</UserControl>
