<Window x:Class="WpfApp1.Window_Save"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Save?" Height="186.769" Width="800" ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveCaptionColorKey}}"/>
        </Grid.Background>
        <Label Content="Do you want to save the file?" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="237,25,0,0" Width="378" FontSize="22"/>
        <Button Content="YES" HorizontalAlignment="Left" VerticalAlignment="Top" Width="161" Margin="152,104,0,0" Height="33" Click="Click_DA"/>
        <Button Content="NO" HorizontalAlignment="Left" VerticalAlignment="Top" Width="161" Margin="459,104,0,0" Height="33" Click="Click_NE"/>

    </Grid>
</Window>
