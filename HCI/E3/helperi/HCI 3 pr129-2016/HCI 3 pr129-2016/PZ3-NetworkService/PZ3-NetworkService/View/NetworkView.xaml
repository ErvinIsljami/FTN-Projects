                <Border Background="Black" Opacity="0.8" VerticalAlignment="Bottom">
                    <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" Foreground="White"/>
                </Border>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

