<UserControl x:Class="PZ3_NetworkService.View.DataChartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PZ3_NetworkService.View"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
	<Grid Background="LightGray">
		<TextBox  Text="{Binding Path=ChartTerminal, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Right" Height="50" TextWrapping="Wrap"  VerticalAlignment="Top" Width="650" Margin="0,430,10,0" Background="Black" Foreground="White">
			<TextBox.InputBindings>
				<KeyBinding Command="{Binding ChartCommand}" CommandParameter="enter" Key="Enter" />
			</TextBox.InputBindings>
		</TextBox>
		<TextBox  Name="terminalBox"  IsReadOnly="True" HorizontalAlignment="Right" Height="50" TextWrapping="Wrap" Text="{Binding Path=ChartTerminal2, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="110" Margin="0,430,665,0" Foreground="White" Background="#FF040404"  />

		<Rectangle Fill="Transparent" HorizontalAlignment="Right" Height="361" Margin="0,35,5,0" Stroke="Black" VerticalAlignment="Top" Width="742"/>

		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="361" Margin="0,35,10,0" VerticalAlignment="Top" Width="736" RenderTransformOrigin="0.5,0.5">
			<StackPanel.RenderTransform>
				<TransformGroup>
					<ScaleTransform ScaleX="-1"/>
					<SkewTransform/>
					<RotateTransform Angle="180"/>
					<TranslateTransform/>
				</TransformGroup>
			</StackPanel.RenderTransform>
			<Rectangle x:Name="Border0" Fill="Transparent" Stroke="Transparent" HorizontalAlignment="Left" Height="221"   VerticalAlignment="Top" Width="75"/>
			<Rectangle x:Name="Rect0" Fill="{Binding BarColor[0]}" Stroke="Transparent" HorizontalAlignment="Left" Height="{Binding Bars[0]}"  VerticalAlignment="Top" Width="60"/>
			<Rectangle x:Name="Border1" Fill="Transparent" Stroke="Transparent" HorizontalAlignment="Left" Height="221"   VerticalAlignment="Top" Width="75"/>
			<Rectangle x:Name="Rect1" Fill="{Binding BarColor[1]}" Stroke="Transparent" HorizontalAlignment="Left" Height="{Binding Bars[1]}"  VerticalAlignment="Top" Width="60" RenderTransformOrigin="0.5,0.5"/>
			<Rectangle x:Name="Border2" Fill="Transparent" Stroke="Transparent" HorizontalAlignment="Left" Height="221"   VerticalAlignment="Top" Width="75"/>
			<Rectangle x:Name="Rect2" Fill="{Binding BarColor[2]}" Stroke="Transparent" HorizontalAlignment="Left" Height="{Binding Bars[2]}"  VerticalAlignment="Top" Width="60" RenderTransformOrigin="0.5,0.5"/>
			<Rectangle x:Name="Border3" Fill="Transparent" Stroke="Transparent" HorizontalAlignment="Left" Height="221"   VerticalAlignment="Top" Width="75"/>
			<Rectangle x:Name="Rect3" Fill="{Binding BarColor[3]}" Stroke="Transparent" HorizontalAlignment="Left" Height="{Binding Bars[3]}"  VerticalAlignment="Top" Width="60" RenderTransformOrigin="0.5,0.5"/>
			<Rectangle x:Name="Border4" Fill="Transparent" Stroke="Transparent" HorizontalAlignment="Left" Height="221"   VerticalAlignment="Top" Width="75"/>
			<Rectangle x:Name="Rect4" Fill="{Binding BarColor[4]}" Stroke="Transparent" HorizontalAlignment="Left" Height="{Binding Bars[4]}"  VerticalAlignment="Top" Width="60" RenderTransformOrigin="0.5,0.5"/>

		</StackPanel>
		<Label Content="0.5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,347,0,0" Width="31"/>
		<Label Content="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,311,0,0" Width="31"/>
		<Label Content="1.5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,275,0,0" Width="31"/>
		<Label Content="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,239,0,0" Width="31"/>
		<Label Content="2.5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,203,0,0" Width="31"/>
		<Label Content="3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,167,0,0" Width="31"/>
		<Label Content="3.5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,131,0,0" Width="31"/>
		<Label Content="4" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,95,0,0" Width="31"/>
		<Rectangle Fill="Transparent" HorizontalAlignment="Left" Height="1" Stroke="Black" VerticalAlignment="Top" Width="794" Margin="0,372,0,0" RenderTransformOrigin="0.5,0.5">
			<Rectangle.RenderTransform>
				<TransformGroup>
					<ScaleTransform ScaleY="-1"/>
					<SkewTransform/>
					<RotateTransform/>
					<TranslateTransform/>
				</TransformGroup>
			</Rectangle.RenderTransform>
		</Rectangle>
		<Rectangle Fill="Transparent" HorizontalAlignment="Left" Height="1" Stroke="Black" VerticalAlignment="Top" Width="793" Margin="0,202,0,0" RenderTransformOrigin="0.5,0.5">
			<Rectangle.RenderTransform>
				<TransformGroup>
					<ScaleTransform ScaleY="-1"/>
					<SkewTransform/>
					<RotateTransform/>
					<TranslateTransform/>
				</TransformGroup>
			</Rectangle.RenderTransform>
		</Rectangle>
		<Label Content="{Binding Vrijeme[0]}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="129,401,0,0" Height="24" Width="60"/>
		<Label Content="{Binding Vrijeme[1]}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="264,401,0,0" Height="24" Width="60"/>
		<Label Content="{Binding Vrijeme[2]}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="398,401,0,0" Height="24" Width="60"/>
		<Label Content="{Binding Vrijeme[3]}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="532,401,0,0" Height="24" Width="60"/>
		<Label Content="{Binding Vrijeme[4]}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="670,401,0,0" Height="24" Width="60"/>

		<Label Content="Available Commands: 'refreshChart', 'network', 'networkData'" HorizontalAlignment="Left" VerticalAlignment="Top" Width="457" Height="33" Margin="140,480,0,-13" FontSize="10" />

	</Grid>
</UserControl>
