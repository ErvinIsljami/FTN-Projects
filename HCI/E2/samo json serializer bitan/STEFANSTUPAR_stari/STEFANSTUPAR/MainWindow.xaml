<Window x:Class="STEFANSTUPAR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STEFANSTUPAR"
        mc:Ignorable="d"
        Title="MainWindow" Height="655" Width="955">
    <DockPanel>
        <Menu DockPanel.Dock="Top" Height="50" Background="White">
            <Menu.ItemsPanel >
                <ItemsPanelTemplate>
                    <DockPanel HorizontalAlignment="Stretch"></DockPanel>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>

            <Image Source="Images/MainIcon.jpg"/>

            <MenuItem  Header="Dodaj lokal" FontSize="10"  Click="DodajLokal_Click" Foreground="HotPink" Height="30"  Width="80" Background="white" BorderBrush="HotPink" Margin="5,5,5,5" >
                <MenuItem.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                        <Setter Property="BorderBrush" Value="#4288c1"/>
                        <Setter Property="BorderThickness" Value="5px"/>
                    </Style>
                </MenuItem.Resources>
            </MenuItem>

            <MenuItem  Header="Dodaj etiketu" FontSize="10"  Click="DodajEtiketu_Click" Foreground="HotPink" Height="30" Width="80" Background="white" BorderBrush="HotPink" Margin="5,5,5,5">
